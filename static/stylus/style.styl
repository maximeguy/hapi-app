

//breakpoints
bp1 = 320px
bp2 = 480px
bp3 = 640px
bp4 = 768px
bp5 = 1024px

//spacing
gap1 = 8px
gap2 = 16px
gap3 = 24px
gap4 = 32px
gap5 = 48px
gap6 = 64px

color-one = #000000
color-two = #000000
color-bg = #EEEEEE
color-bgalt = #AAAAAA
color-text = #444444

html
    font-size 1em

body
    font-weight 400
    line-height 1.45
    color #333

header
    background-color: color-one
    -moz-box-shadow: 6px 6px 8px color-text
    -webkit-box-shadow: 6px 6px 8px color-text
    -o-box-shadow: 6px 6px 8px color-text
    box-shadow: 6px 6px 8px color-text
    display: block
    position: fixed
    padding-top: gap2
    width: 100%
    height: 100px
    left: 0
    top: 0
    margin: 0
    z-index: 8

#header-background
    height 480px
    background no-repeat center center
    background-image url(img/photo-ij-a.jpg)
    background-size cover

#main-container
    position absolute
    width 100%
    top 116px

//---grid

.center-s
    center(bp1, pad: .5)

.center-m
    center(bp3, pad: .5)

.center-l
    center(bp5, pad: .5)

.row
    column(1/1, gutter: 1)

.col-2
    column(1/2, gutter: 1)

.col-3
    column(1/3, gutter: 1)

.col-4
    column(1/4, gutter: 1)

.col-6
    column(1/3, gutter: 1)

col-stack-s
    +below(bp1)
        stack()

col-stack-m
    +below(bp2)
        stack()

col-stack-l
    +below(bp3)
        stack()


//display

.hide
    display none

.hide-s
    +below(bp1)
        display none

.hide-m
    +below(bp2)
        display none

.hide-l
    +below(bp3)
        display none

.show-s
    +above(bp1)
        display none

.show-m
    +above(bp2)
        display none

.show-l
    +above(bp3)
        display none


//block

.panel
    width auto
    margin gap1
    padding gap2


//text

p {margin-bottom: 1.3em;}

h1, h2, h3, h4
    margin 1.414em 0 0.5em
    font-weight inherit
    line-height 1.2

h1
    margin-top 0
    font-size 3.998em

h2
    font-size 2.827em

h3
    font-size 1.999em

h4
    font-size 1.414em

small
    font-size 0.707em

#app-title
    text-align center

//img

gallery
    column(1/6,cycle:6)
    +below(bp3)
        column(1/3,cycle:3)

.photo
    display block
    width 100%
    height auto
    margin gap2 auto

.photo-s
    max-width bp1

.logo
    display block
    min-width 80px
    max-width 160px
    height auto
    margin gap2 auto

.icon
    display block
    width 96px
    height 96px
    margin gap2 auto
    +below(bp2)
        width 64px
        height 64px

.icon-s
    width 16px
    height 16px
    margin gap1 auto

.icon-m
    width 32px
    height 32px
    margin gap1 auto

.icon-l
    width 64px
    height 64px


//iframe

.iframe-responsive-wrapper
    position relative
    margin-bottom gap2
    +below(bp3)
        margin gap2

.iframe-responsive-wrapper .iframe-ratio
    display block
    width 100%
    height auto

.iframe-responsive-wrapper iframe
    position absolute
    top 0
    left 0
    width 100%
    height 100%


//form


input, textarea, select
    display block
    border none
    margin gap1 auto

textarea, input
    border-radius 4px
    width auto
    min-width 180px
    transition border 0.3s

input
    max-width 320px
    margin gap1 auto

textarea
    height 68px
    border-right solid 2px color-one
    border-bottom solid 2px color-one

textarea:focus, input[type="text"]:focus, input[type="email"]:focus, input[type="tel"]:focus
    border-bottom solid 2px color-one
    outline none

textarea:focus
    border-right solid 2px color-one


input[type="submit"]
    font-family roboto-medium
    font-size 18px
    min-width 160px
    text-align center
    background-color color-one
    color colorbg
    cursor pointer
    padding gap2